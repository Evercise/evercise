<div class="formitem clearfix">
	<?php if(isset($label)): ?>
		<div class="formlabel">
			<?php echo Form::label( $fieldname, $label); ?>
		</div>
	<?php endif; ?>
	<div class="formfield">
		<?php if( isset($form)): ?>
			<?php echo Form::textarea( $fieldname , isset($default) ? $default : '', array( 'data-tooltip' => isset($tooltip) ? $tooltip : null ,  'pattern' => isset($pattern) ? $pattern : null,  'placeholder' => $placeholder, 'maxlength' => $maxlength, 'form' => $form, 'class' => isset($tooltip) ? 'tooltip' : null )); ?>
			<?php if(isset($fieldtext)): ?>
				<p><?php echo $fieldtext; ?></p>
			<?php endif; ?>
		<?php else: ?>
			<?php echo Form::textarea( $fieldname , isset($default) ? $default : '', array( 'data-tooltip' => isset($tooltip) ? $tooltip : null , 'pattern' => isset($pattern) ? $pattern : null, 'placeholder' => $placeholder, 'maxlength' => $maxlength, 'id' => $fieldname , 'class' => isset($tooltip) ? 'tooltip' : null)); ?>
			<?php if(isset($fieldtext)): ?>
				<p><?php echo $fieldtext; ?></p>
			<?php endif; ?>
		<?php endif; ?>
	</div>
</div>