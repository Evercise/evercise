	<div class="formlabel">
		<?php echo Form::label( $fieldname, $label); ?>
	</div>
	<div class="formfield">
		<div class="<?php echo $fieldname; ?>_pre slider_pre"></div>

		<?php if(isset($default)): ?>
			<?php echo Form::text( $fieldname , $default, array( 'data-tooltip' => isset($tooltip) ? $tooltip : null , 'class' => isset($tooltip) ? ' tooltip slider-input' : 'slider-input', 'placeholder' => $placeholder, 'maxlength' => $maxlength)); ?>
		<?php else: ?>
			<?php echo Form::text( $fieldname , '', array( 'data-tooltip' => isset($tooltip) ? $tooltip : null , 'class' => isset($tooltip) ? ' tooltip slider-input' : 'slider-input', 'placeholder' => $placeholder, 'maxlength' => $maxlength)); ?>
		<?php endif; ?>

		<div id="<?php echo $fieldname; ?>-slider" class="slider mt10"></div>
		<br>
		<?php if(isset($fieldtext)): ?>
			<p><?php echo $fieldtext; ?></p>
		<?php endif; ?>

	</div>
