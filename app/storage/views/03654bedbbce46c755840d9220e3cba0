<div id="login_wrap" class="login_wrap">
    <div id="cancel_login" class="cancel">x</div>
    <?php echo Form::open(array('id' => 'login_form', 'url' => 'auth/login', 'method' => 'post')); ?>
        <?php if ($errors->has('login')): ?>
                <div class="alert alert-error"><?php echo $errors->first('login', ':message'); ?></div>
        <?php endif; ?>
        <div>
            <?php echo $__env->make('form.textfield', array('fieldname'=>'email', 'placeholder'=>'email', 'maxlength'=>50, 'label'=>'Please enter your email', 'fieldtext'=>null ), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
        </div>
        <div>
            <?php echo $__env->make('form.password', array('fieldname'=>'password', 'placeholder'=>'password', 'maxlength'=>20, 'label'=>'Please enter your password', 'fieldtext'=>null ), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php echo $__env->make('form.hidden', array('fieldname'=>'redirect_after_login',  'value' =>$redirect_after_login ), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php echo $__env->make('form.hidden', array('fieldname'=>'redirect_after_login_url',  'value' =>$redirect_after_login_url), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
             
        </div>
        <br>
        <div>
            <?php echo Form::submit('Login', array('class' => 'btn btn-yellow')); ?>
        </div>
        <div class="orSeperator"><span>or</span></div>
    <?php echo Form::close(); ?>
    <?php if ($redirect_after_login == 1): ?>
       <?php echo HTML::linkRoute('users.fb', 'Log in with facebook', $redirect_after_login_url ,  ['class' => 'btn btn-fb']); ?>
    <?php else: ?>
        <?php echo HTML::linkRoute('users.fb', 'Log in with facebook', null , ['class' => 'btn btn-fb']); ?>
    <?php endif; ?>
    <div class="mt10">
     <?php echo HTML::linkRoute('auth.forgot', 'Forgot password?' , null); ?>
    </div>
</div>
