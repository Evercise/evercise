<div class="mt30">
    <?php echo Form::open(array('id' => 'password_change', 'url' => 'users/changepassword', 'method' => 'post', 'class' => 'create-form')); ?>

        <?php if ($errors->has('forgot')): ?>
            <div class="input-wrapper">
                <div class="error-msg"><?php echo $errors->first('forgot', ':message'); ?></div>
            </div>
        <?php endif; ?>
        <?php if (isset($message)): ?>
            <div class="input-wrapper">
                <div class="error-msg"><?php echo $message; ?></div>
            </div>
        <?php else: ?>
            <div class="input-wrapper">

                <?php echo $__env->make('form.password', array('fieldname'=>'old_password', 'placeholder'=>'Enter your current password', 'maxlength'=>20, 'label'=>'Your current password', 'fieldtext'=>''), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                <?php if ($errors->has('old_password')): ?>
                    <?php echo $errors->first('old_password', '<p class="error_msg">:message</p>'); ?>
                <?php endif; ?>

                <?php echo $__env->make('form.password', array('fieldname'=>'new_password', 'placeholder'=>'Choose a password', 'maxlength'=>20, 'confirmation'=> 'Please re-enter your password', 'label'=>'Your new password', 'tooltip'=>'For increased security, please choose a password with a combination of lowercase, capital letters and numbers (but no symbols).'), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                <?php if ($errors->has('new_password')): ?>
                    <?php echo $errors->first('new_password', '<p class="error_msg">:message</p>'); ?>
                <?php endif; ?>

            </div>
            <div class="center-btn-wrapper" >
                <?php echo Form::submit('Reset Password', array('class' => 'btn btn-yellow')); ?>
            </div>
        <?php endif; ?>
        <div class="success_msg">Details updated</div>
    <?php echo Form::close(); ?> 
</div>
