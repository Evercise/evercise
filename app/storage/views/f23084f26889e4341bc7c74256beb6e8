        <?php if ($errors->has('title')): ?>
            <?php echo $errors->first('title', '<p class="error-msg">:message</p>'); ?>
        <?php endif; ?>

        <?php echo $__env->make('form.textfield', array('fieldname'=>'bio', 'placeholder'=>'between 50 and 500 characters', 'maxlength'=>500, 'label'=>'Add your bio', 'fieldtext'=>'Your biography will be visible on your profile and will give members a more personal insight into you as an instructor. (example: Kayla is a qualified pool yoga instructor with 5 years of experience helping swimmers improve strength and flexibility in the pool. She is excited to meet new swimmers and help them improve their practice while decreasing chances of injury. She loves canoeing and camping, and is very happy to be a part of the evercise team!)' ), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
        <?php if ($errors->has('bio')): ?>
            <?php echo $errors->first('bio', '<p class="error-msg">:message</p>'); ?>
        <?php endif; ?>

        <?php echo $__env->make('form.textfield', array('fieldname'=>'website', 'placeholder'=>'website address', 'maxlength'=>100, 'label'=>'Add your website', 'fieldtext'=>'(Optional) - If you want users to learn more about you and what you do, you can include your web address, which will be visible on your profile.' ), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
        <?php if ($errors->has('website')): ?>
            <?php echo $errors->first('website', '<p class="error-msg">:message</p>'); ?>
        <?php endif; ?>

        <?php if(basename($displayImage) != 'no-user-img.jpg'): ?>
